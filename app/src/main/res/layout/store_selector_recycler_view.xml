<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_selector_store_name"
                android:text="@string/store_selector_name_placeholder"
                android:textColor="#FF2091AB"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/store_selector_store_role"
                android:text="@string/store_selector_assistant_placeholder"
                android:textColor="#FF2091AB"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_selector_store_address"
                android:text="@string/store_selector_address_placeholder"
                android:textColor="#FF2091AB"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/store_selector_store_id"
                android:text="@string/store_selector_id_placeholder"
                android:textColor="@color/lightGray"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">
                <Button
                    android:id="@+id/store_selector_store_positive_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="@string/store_selector_positive_label"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    app:cornerRadius="50dp"
                    android:backgroundTint="@color/positiveButtonColor"
                    style="?android:attr/buttonBarButtonStyle" />
                <Button
                    android:id="@+id/store_selector_store_negative_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_selector_negative_label"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    app:cornerRadius="50dp"
                    android:backgroundTint="@color/negativeButtonColor"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/store_selector_store_status"
            android:text="@string/store_selector_status_placeholder"
            android:textColor="@color/lavender"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
