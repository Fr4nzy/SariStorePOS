<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_selector_store_name"
                android:text="ALING NENA'S SARI SARI STORE"
                android:textColor="@color/lavender"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/store_selector_store_role"
                android:text="ASSISTANT"
                android:textColor="@color/lavender"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_selector_store_address"
                android:text="CASILAGAN MANGATAREM PANGASINAN"
                android:textColor="@color/lavender"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_selector_store_id"
                android:text="\@RANDOMID1234"
                android:textColor="@color/lightGray"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                >
                <Button
                    android:id="@+id/store_selector_store_positive_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Positive"
                    android:textSize="10dp"
                    android:backgroundTint="@color/positiveButtonColor"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:id="@+id/store_selector_store_negative_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative"
                    android:textSize="10dp"
                    android:backgroundTint="@color/negativeButtonColor"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/store_selector_store_status"
            android:text="Status"
            android:textColor="@color/lavender"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
