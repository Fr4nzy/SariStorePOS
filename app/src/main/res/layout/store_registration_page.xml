<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbg"
    tools:context="com.projectfkklp.saristorepos.activities.user_login.UserLoginPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp"
        android:foregroundGravity="center"
        android:paddingBottom="0dp"
        android:src="@drawable/store1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1px"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Store Registration"
        android:textColor="#FCFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your store name"
                android:textAlignment="center"
                android:textColor="#0A20DF"
                android:textSize="20sp"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/store_name"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Store Name"
                android:drawableLeft="@drawable/store"
                android:drawablePadding="8dp"
                android:textColor="@color/gray"
                android:inputType="textPersonName"/>



            <Button
                android:id="@+id/storeRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundback"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>