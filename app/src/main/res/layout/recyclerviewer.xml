<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/upload"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/recProduct"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Product"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/recStock"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recProduct"
            android:text="Stock"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/outOfStockWarning"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/recStock"
            android:layout_marginStart="87dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/recProduct"
            android:text="Out of Stock"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/recPrice"
            android:layout_marginBottom="10dp"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/recProduct"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="0"
            android:text="Price"
            android:textColor="@color/lavender"
            android:textSize="8sp"
            tools:visibility="visible" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
