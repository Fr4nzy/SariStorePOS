<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_profile_user_name"
                android:text="Juan Dela Cruz"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/store_profile_user_role"
                android:text="ASSISTANT"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_profile_user_gmail"
                android:text="jdelacruz@gmail.com"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_profile_user_phone"
                android:text="+639672410294"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/store_profile_user_id"
                android:text="\@RANDOMID1234"
                android:textColor="@color/lightGray"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                >
                <Button
                    android:id="@+id/store_profile_positive_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Positive"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:backgroundTint="@color/positiveButtonColor"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:id="@+id/store_profile_negative_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:backgroundTint="@color/negativeButtonColor"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/store_profile_user_status"
            android:text="Status"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
