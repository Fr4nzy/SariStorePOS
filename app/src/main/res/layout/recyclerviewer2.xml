<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec2Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rec2Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/upload" />

        <TextView
            android:id="@+id/rec2Product"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/rec2Image"
            android:text="Product"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/rec2Image"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/stockLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="10dp"
            android:text="Stock"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cartImageView"
            app:layout_constraintTop_toBottomOf="@+id/priceLbl" />

        <TextView
            android:id="@+id/rec2Stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec2Product"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/rec2Image"
            android:text="stock"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stockLbl"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/priceLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="10dp"
            android:text="â‚±"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/rec2Product"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rec2Price"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/rec2Product"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/priceLbl"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/cartImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec2Price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/rec2Product"
            android:clickable="true"
            android:contentDescription="Shopping Cart Icon"
            android:onClick="onCartIconClick"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rec2Image"
            app:layout_constraintTop_toBottomOf="@+id/rec2Product"
            tools:ignore="TouchTargetSizeCheck"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
