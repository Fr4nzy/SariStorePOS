<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/transaction_invoice_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="8dp">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/transaction_invoice_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/transaction_invoice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Product"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/transaction_invoice_qty_x_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:text="10 QTY * ₱100.00"
            android:textSize="13sp"
            android:layout_gravity="fill"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/transaction_invoice_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Amount: ₱ 1,000.00"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_gravity="fill"
            android:textColor="#FFA07A"
            tools:ignore="HardcodedText" />
    </GridLayout>

</androidx.cardview.widget.CardView>
