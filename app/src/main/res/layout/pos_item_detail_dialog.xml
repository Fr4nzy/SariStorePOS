<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/pid_dialog_product_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/placeholder"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowSpan="3"
                    android:layout_marginEnd="5dp"
                    />

                <TextView
                    android:id="@+id/pid_dialog_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Product"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    />

                <TextView
                    android:id="@+id/pid_dialog_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit Price: ₱100.00"
                    android:textSize="13sp"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <LinearLayout
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/pid_dialog_btn_minus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@drawable/minus"
                        app:tint="?attr/colorControlNormal"/>

                    <EditText
                        android:id="@+id/pid_dialog_quantity_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        style="@style/EditTextNoUnderline"/>

                    <ImageButton
                        android:id="@+id/pid_dialog_btn_plus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@drawable/add"
                        app:tint="?attr/colorControlNormal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_rowSpan="2"
                    android:orientation="vertical"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/pid_dialog_subtotal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱ 1.00"
                        android:textColor="#090"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/pid_dialog_left_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 item left"
                        android:textColor="#DD4500"
                        android:textSize="13sp"/>
                </LinearLayout>

            </GridLayout>

            <ImageButton
                android:id="@+id/pid_dialog_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:src="@drawable/delete"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pid_dialog_dismiss"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                app:icon="@drawable/close"
                app:iconSize="20sp"
                app:iconGravity="textStart"
                android:backgroundTint="#DD4500"
                app:iconPadding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                app:cornerRadius="0dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pid_dialog_submit"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                app:icon="@drawable/baseline_check_24"
                app:iconGravity="textStart"
                android:backgroundTint="#006400"
                app:iconPadding="0dp"
                app:iconSize="20sp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                app:cornerRadius="0dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
